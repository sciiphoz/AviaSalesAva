<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AviaSales.ProfilePage">
    <Grid>
		<Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
    
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
            <TextBlock FontSize="20" x:Name="userName"></TextBlock>
            <TextBlock FontSize="20" Text=" | "></TextBlock>
            <TextBlock FontSize="20" x:Name="userEmail"></TextBlock>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
			<ListBox x:Name="MainListBox">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border Width="1000" Height="150" BorderThickness="2">
							<Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

								<StackPanel Grid.Column="0" Orientation="Vertical" Margin="15, 10" VerticalAlignment="Center">
									<StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
										<TextBlock FontSize="18" Text="Flight"></TextBlock>
										<TextBlock FontSize="18" Text=" | "></TextBlock>
										<TextBlock FontSize="18" Text="{Binding Booking.IdFlight}"></TextBlock>
									</StackPanel>
									
									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
										<TextBlock Text="{Binding Booking.IdFlightNavigation.DepartureCity}"></TextBlock>
										<TextBlock Text=" -> "></TextBlock>
										<TextBlock Text="{Binding Booking.IdFlightNavigation.ArrivalCity}"></TextBlock>
									</StackPanel>

									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
										<TextBlock Text="{Binding Booking.IdFlightNavigation.DepartureTime}"></TextBlock>
										<TextBlock Text=" - "></TextBlock>
										<TextBlock Text="{Binding Booking.IdFlightNavigation.ArrivalTime}"></TextBlock>
									</StackPanel>
								</StackPanel>

								<StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0, 25, 15, 0" HorizontalAlignment="Right" VerticalAlignment="Top">
									<TextBlock Text="Price: "></TextBlock>
									<TextBlock x:Name="tbPrice" FontWeight="Bold" Text="{Binding DiscountedPrice}"></TextBlock>
								</StackPanel>
							</Grid>
						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>

		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button x:Name="btnDelete" Width="175" HorizontalContentAlignment="Center" Margin="25 0 25 0" Click="btnDelete_Click" Content="Cancel booking"></Button>
		</StackPanel>
    </Grid>
</UserControl>
