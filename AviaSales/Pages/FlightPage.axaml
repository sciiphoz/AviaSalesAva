<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AviaSales.FlightPage">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="4*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
		</Grid.RowDefinitions>

		<ScrollViewer Grid.Row="0">
			<ListBox x:Name="MainListBox" DoubleTapped="MainListBox_DoubleTapped">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border Width="1000" Height="150" BorderThickness="2">
							<Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

								<StackPanel Grid.Column="0" Orientation="Vertical" Margin="15, 10" VerticalAlignment="Center">
									<StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
										<TextBlock FontSize="18" Text="{Binding Airline}"></TextBlock>
										<TextBlock FontSize="18" Text=" | "></TextBlock>
										<TextBlock FontSize="18" Text="{Binding Aircraft}"></TextBlock>
									</StackPanel>
									
									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
										<TextBlock Text="{Binding DepartureCity}"></TextBlock>
										<TextBlock Text=" -> "></TextBlock>
										<TextBlock Text="{Binding ArrivalCity}"></TextBlock>
									</StackPanel>

									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
										<TextBlock Text="{Binding DepartureTime}"></TextBlock>
										<TextBlock Text=" - "></TextBlock>
										<TextBlock Text="{Binding ArrivalTime}"></TextBlock>
									</StackPanel>

									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
										<TextBlock Text="{Binding Class}"></TextBlock>
										<TextBlock Text=" | Seat number: "></TextBlock>
										<TextBlock Text="{Binding SeatNumber}"></TextBlock>
										<TextBlock Text=" | "></TextBlock>
										<TextBlock Text="{Binding Status}"></TextBlock>
									</StackPanel>
								</StackPanel>

								<StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0, 25, 15, 0" HorizontalAlignment="Right" VerticalAlignment="Top">
									<TextBlock Text="Price: "></TextBlock>
									<TextBlock FontWeight="Bold" Text="{Binding Price}"></TextBlock>
								</StackPanel>
							</Grid>
						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Background="#0066CC" x:Name="btnAdd" Width="75" HorizontalContentAlignment="Center" Margin="0 0 25 0" Click="btnAdd_Click" Content="Add"></Button>
			<Button Background="#0066CC" x:Name="btnDelete" Width="75" HorizontalContentAlignment="Center" Margin="25 0 25 0" Click="btnDelete_Click" Content="Delete"></Button>
			<Button Background="#0066CC" x:Name="btnAddToBooking" Width="125" HorizontalContentAlignment="Center" Margin="25 0 0 0" Click="btnAddToBooking_Click" Content="Book a flight"></Button>
		</StackPanel>
	</Grid>
</UserControl>
