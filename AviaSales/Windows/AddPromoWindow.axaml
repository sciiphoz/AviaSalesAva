<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AviaSales.AddPromoWindow"
        Title="AddPromoWindow">
    <Grid>
	    <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Width="325" VerticalAlignment="Center">
			<TextBlock>Discount</TextBlock>
			<TextBox x:Name="tbDiscount"/>
		</StackPanel>

		<Button Background="#0066CC" x:Name="btnSave" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" HorizontalContentAlignment="Center" Click="btnSave_Click">Save</Button>
    </Grid>
</Window>
