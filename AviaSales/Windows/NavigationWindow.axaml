<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AviaSales.NavigationWindow"
        Title="NavigationWindow">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="7*"></RowDefinition>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
			<Button Background="#0066CC" x:Name="btnBooking" Width="90" Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0 0 25 0" Click="btnBooking_Click" Content="Booking"></Button>
			<Button Background="#0066CC" x:Name="btnPromo" Width="90" Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="25 0 25 0" Click="btnPromo_Click" Content="Promo"></Button>
			<Button Background="#0066CC" x:Name="btnUser" Width="90" Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="25 0 25 0" Click="btnUser_Click" Content="User"></Button>
			<Button Background="#0066CC" x:Name="btnFlight" Width="90" Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="25 0 25 0" Click="btnFlight_Click" Content="Flight"></Button>
			<Button Background="#0066CC" x:Name="btnProfile" Width="90" Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="25 0 25 0" Click="btnProfile_Click" Content="Profile"></Button>
			<Button Background="Red" x:Name="btnLogout" Width="90" Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="25 0 0 0" Click="btnLogout_Click" Content="Logout"></Button>
			<TextBlock x:Name="UserName"></TextBlock>
		</StackPanel>

		<ContentControl x:Name="MainContentControl" Grid.Row="1">

		</ContentControl>
	</Grid>
</Window>
