<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AviaSales.EditBookingWindow"
        Title="EditBookingWindow">
    <Grid>
	    <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" Orientation="Vertical">
			<StackPanel HorizontalAlignment="Center" Margin="10">
			    <TextBlock>User</TextBlock>
			    <ComboBox Width="175" x:Name="cbUser" DisplayMemberBinding="{Binding Name}"/>
		    </StackPanel>

            <StackPanel HorizontalAlignment="Center" Margin="10">
			    <TextBlock>Flight</TextBlock>
			    <ComboBox Width="175" x:Name="cbFlight" DisplayMemberBinding="{Binding IdFlight}" />
		    </StackPanel>
        </StackPanel>

		<Button x:Name="btnSave" Grid.Row="1" HorizontalAlignment="Center" Width="75" HorizontalContentAlignment="Center" Click="btnSave_Click">Save</Button>
    </Grid>
</Window>
